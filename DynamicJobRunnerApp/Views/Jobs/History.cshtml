@model List<DynamicJobRunnerApp.Models.JobSchedule>

<h2>Historial de Ejecuciones</h2>
<a href="/Jobs" class="btn btn-secondary mb-3">Volver</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Encolado</th>
        <th>Ejecutado</th>
        <th>Estado</th>
        <th>Output</th>
        <th>Error</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var exec in Model)
    {
        <tr>
            <td>@exec.EnqueuedAt.ToLocalTime()</td>
            <td>@exec.ExecutedAt?.ToLocalTime()</td>
            <td>@exec.Status</td>
            <td><pre>@exec.Output</pre></td>
            <td><pre class="text-danger">@exec.Error</pre></td>
        </tr>
    }
    </tbody>
</table>